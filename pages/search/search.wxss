.order-items {
  width: 100%;
  display: flex;
  height: 84rpx;
  /* border-bottom: 1rpx solid #fbfbfb; */
  border-bottom: 1rpx solid #f1f1f1;
  background: #fff;
  z-index: 999;
}

.order-items .item {
  position: relative;
  margin: 0 42rpx;
  box-sizing: border-box;
  height: 100%;
  line-height: 84rpx;
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  /* color: #686868; */
  color: #000;
}

.order-items .item .icon-sort {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 28rpx;
  right: -12rpx;
}

.order-items .item.active {
  border-bottom: 4rpx solid #f67f79;
}

.item-list {
  width: 100%;
  /* height: 100%; */
  padding-left: 10rpx;
  /* background-color: gold; */
}

.select-age {
  position: relative;
}

.select-age .icon-arrow {
  margin-left: 12rpx;
  width: 24rpx;
  height: 24rpx;
}

.select-age::before {
  position: absolute;
  top: 30rpx;
  left: -42rpx;
  content: "";
  width: 1rpx;
  height: 26rpx;
  background: #f6f6f6;
}

.age-box {
  position: absolute;
  top: 208rpx;
  width: 100%;
  background: #fff;
  z-index: 999;
}

.age-box .title {
  font-size: 30rpx;
  color: #686868;
  margin: 60rpx 0 0 36rpx;
}

.age-box .age-list {
  font-size: 28rpx;
  padding: 0 0 52rpx 28rpx;
  color: #999;
  border-bottom: 2rpx solid #e6e6e6;
}

.age-box .age-btn {
  margin-top: 28rpx;
  margin-right: 46rpx;
  display: inline-block;
  box-sizing: border-box;
  width: 195rpx;
  height: 65rpx;
  line-height: 65rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  text-align: center;
}

.age-box .age-btn.active {
  background: #44be56;
  color: #fff;
  border-color: #44be56;
}

.age-box .btn-wrapper {
  margin: 42rpx 0 70rpx 0;
}

.age-box .btn {
  display: inline-block;
  box-sizing: border-box;
  width: 330rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 8rpx;
}

.age-box .btn.cancel {
  margin: 0 28rpx;
  color: #333;
  border: 1rpx solid #333;
}

.age-box .btn.confirm {
  color: #fa8852;
  border: 1rpx solid #fa8852;
}

.shade {
  position: fixed;
  width: 100%;
  top: 0;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
}

.loading-wrapper {
  position: fixed;
  display: flex;
  justify-content: center;
  width: 100%;
  top: 50%;
  transform: translateY(-50%);
}

.no-result {
  margin-top: 20rpx;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #999;
}

.list-footer-wrapper {
  width: 100%;
}
