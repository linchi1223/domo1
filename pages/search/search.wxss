.container {
  min-height: 100%;
  /* background: #f3f3f3; */
  background: #fff;
  overflow: hidden;
}
.search{
  clear: both;
}
/* 搜索框S */
.select {
  background-color: #f0f3fc;
  border-radius: 30rpx;
  margin: 20rpx 15rpx;
  width: 80%;
  float: left;
}
/* 搜索框E */

/* 搜索框图标S */

.select image {
  margin: 10rpx 5rpx 10rpx 15rpx;
  line-height: 20rpx;
  width: 50rpx;
  height: 50rpx;
  float: left;
}

/* 搜索框图标E */

