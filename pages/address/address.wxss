/* pages/address/address.wxss */

page {
  background-color: #f4f4f4;
  font-size: 30rpx;
}

.zong {
  background-color: #fff;
  width: 100%;
  float: left;
  height: 140rpx;
  margin-bottom: 10rpx;
  padding: 20rpx 0;
  position: relative;
}

.usertb {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #b8bdbe;
  float: left;
  margin: 40rpx 20rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 35rpx;
  color: #fff;
}

.center {
  margin: 10rpx 100rpx;
  height: 100%;
  /* background: greenyellow; */
  display: block;
}

.center .centerup {
  margin-left: 10rpx;
}

.centerup .username {
  float: left;
  color: #000;
  /* background-color: red; */
  height: 40rpx;
  margin-right: 20rpx;
}

.centerup .usertel {
  /* background-color: paleturquoise; */
  font-size: 25rpx;
  padding-top: 10rpx;
  height: 31rpx;
}

.center .useraddress {
  margin-top: 10rpx;
  margin-left: 10rpx;
  color: #000;
  /* background-color: goldenrod; */
  font-size: 26rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.bj {
  position: absolute;
  /* background-color: greenyellow; */
  top: 0rpx;
  right: 0rpx;
  width: 80rpx;
  line-height: 100rpx;
  margin: 40rpx 0;
  border-left: 1rpx solid #ddd;
  padding-left: 10rpx;
}

.addaddress {
  height: 100rpx;
  width: 100%;
  background-color: wheat;
  position: fixed;
  bottom: 0;
  text-align: center;
  line-height: 100rpx;
}
