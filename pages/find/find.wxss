  font-size: 26rpx;
}

.cate-list {
  height: 90rpx;
  width: 100%;
  background-color: #fff;
  line-height: 90rpx;
  text-align: center;
  color: #000;
  font-size: 26rpx;
}

.cate-list.click {
  /* color: #FE7774; */
  color: red;
  background: #f0f3fc;
}

.categroy-right {
  color: #000;
  float: right;
  width: 98%;
  height: 100%;
  /* border-right: 1px solid #ddd; */
  box-sizing: border-box;
  font-size: 30rpx;
}

.cate-box {
  background-color: #fff;
  margin-top: 20rpx;
  clear: both;
}

