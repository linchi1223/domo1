/* 搜索框E */

page {
  width: 100%;
  height: 100%;
}

.select {
  background-color: #f0f3fc;
  width: 95%;
  clear: both;
  margin: 20rpx auto;
  border-radius: 30px;
}

.select image {
  margin: 10rpx 5rpx 10rpx 15rpx;
  line-height: 20rpx;
  width: 50rpx;
  height: 50rpx;
  float: left;
}

.select .textss {
  height: 70rpx;
  line-height: 70rpx;
  color: #a3a3a3;
  font-weight: 300;
  font-size: 26rpx;
}

