  clear: both;
}

.c-left {
  /* background-color: darkgreen; */
  width: 25%;
  height: 100%;
  float: left;
}

.c-right {
  background-color: #f0f3fc;
  width: 75%;
  height: 100%;
  float: right;
}

.categroy-left {
  float: left;
  width: 100%;
  height: 100%;
  /* border-right: 1px solid #ddd; *//* background: rosybrown; */
