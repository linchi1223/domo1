.paymentPop{
  height: 100%;
  width: 100%;
  background-color: #fcfdff;
  box-sizing: border-box;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.paymentPop .header{
  position: relative;
  height: 90rpx;
  line-height: 88rpx;
  width:100%; 
  text-align: center;
  border-bottom: 1px solid #1aac19;
}
.header image{
  position: absolute;
  height: 30rpx;
  width: 30rpx;
  top: 30rpx;
  left: 20rpx;
}
.header view{
  color: #000000;
  font-size: 36rpx;
}
.paymentPop .middle{
  height: 176rpx;
  width: 100%;
  box-sizing: border-box;
  /* border-bottom: 1px solid #1aac19; */
  margin-top: 5%;
}
.middle .name{
  width: 100%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: #000000;
  font-size: 34rpx;
  
}
.middle .price{
  width: 100%;
  height: 60rpx;
  text-align: center;
  color: #000000;
  font-weight: bolder;overflow: hidden;
  margin-top: 5%;
}

.price .number{
  height: 100%;
  line-height: 60rpx;
  font-size: 72rpx;
  
}

.price .sign{
  height: 100%;
  line-height: 20rpx;
  font-size: 40rpx;
}

.paymentPop .footer{
  height: 90rpx;
  width: 100%;
  /* background-color: red; */
  box-sizing: border-box;
  margin-top: 6%;
}

.footer .button{
  height: 100%;
  width: 90%;
  background-color: #1aac19;
  display: block;
  box-sizing: border-box;
  margin:  auto;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  color: #fcfdff;
  text-align: center;
  font-size: 30rpx;
  line-height: 90rpx;
}

