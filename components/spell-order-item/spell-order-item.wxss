.order-item{
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  background-color: #FFFFFF;
  padding-left: 20rpx;
  border-bottom: 1px solid #e9e9e9;

}
.order-item .item-label{
  position: relative;
  height: 88rpx;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 3rpx solid #e9e9e9;
  text-align: center;
  font-size: 26rpx;
}
.item-label .label-text{
  height: 100%;
  width: 34%;
  position: absolute;
  left: 0rpx;
  line-height: 88rpx;
  color:#D46E6C;
}

.item-label .label-time{
  height: 100%;
  width: 42%;
  position: absolute;
  right: 20rpx;
  line-height: 88rpx;
  color: #9C9C9C;
}
.order-item .item-body{
  height: 200rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  border-bottom: 1px solid #e9e9e9;
}

.item-body .body-left{
  margin-top: 2.5%;
  height: 80%;
  width: 20%;
}
.body-left image{
  height: 100%;
  width: 100%;
  background-color: red;
}

.item-body .body-right{
  height: 85%;
  width: 73%;
  margin-top: 2%;
  margin-left: 3%;
  display: flex;
  flex-direction: column;
}

.body-right .right-name{
  height: 50rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #343434;
  font-size: 30rpx;
}

.body-right .right-specifications{
  position: relative;
  height: 120rpx;
  width: 100%;
  overflow: hidden;
  white-space: pre-wrap;
  top: 0rpx;
}

.right-specifications .specificationss-item{
  height: 32rpx;
  display: inline-block;
  font-size: 22rpx;
  color: #343434;
}

.body-right .right-quantity-price{
  position: relative;
  height: 56rpx;
  width: 100%;
  font-size: 30rpx;
  color: #343434;
}
.right-quantity-price .quantity{
  position: absolute;
  left: 0rpx;
}
.right-quantity-price .price{
  position: absolute;
  right: 0rpx;
}

 .order-item .item-btn{
   position: relative;
   height: 116rpx;
   width: 100%;
   color: #fff;
   font-size: 28rpx;
  
 }
 .item-btn .btn-orderDetail{
   position: absolute;
   display: inline-block;
   border: 1px solid #9C9C9C;
   color: #9C9C9C;
   height: 69%;
   width: 25%;
   border-bottom-left-radius: 6rpx;
   border-bottom-right-radius: 6rpx;
   border-top-left-radius: 6rpx;
   border-top-right-radius: 6rpx; 
   text-align: center;
   line-height: 80rpx;
   top: 16rpx;
   right: 240rpx;
 }
 .item-btn .btn-spellDetail{
   position: absolute;
   display: inline-block;
   background-color: #EA6B5F;
   height: 69%;
   width: 25%;
   border-bottom-left-radius: 6rpx;
   border-bottom-right-radius: 6rpx;
   border-top-left-radius: 6rpx;
   border-top-right-radius: 6rpx; 
   text-align: center;
   line-height: 80rpx;
   top: 16rpx;
   right: 20rpx;
 }

 .item-btn .btn-pay{
    position: absolute;
   display: inline-block;
   background-color: #EA6B5F;
   height: 69%;
   width: 25%;
   border-bottom-left-radius: 6rpx;
   border-bottom-right-radius: 6rpx;
   border-top-left-radius: 6rpx;
   border-top-right-radius: 6rpx; 
   text-align: center;
   line-height: 80rpx;
   top: 16rpx;
   right: 20rpx;
 }